@model Lab10.Models.Book
@{
    ViewData["Title"] = "CreateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateBook</h1>

<div class="row">
    <form asp-action="CreateBook">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BookName" class="control-label"></label>
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NoOfPages" class="control-label"></label>
            <input asp-for="NoOfPages" class="form-control" />
            <span asp-validation-for="NoOfPages" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>