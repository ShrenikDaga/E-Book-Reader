@model Lab10.Models.Book
@{
    ViewData["Title"] = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <form asp-action="EditBook">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BookName" class="control-label"></label>
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NoOfPages" class="control-label"></label>
            <input asp-for="NoOfPages" class="form-control" />
            <span asp-validation-for="NoOfPages" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"/>
        </div>
        
    </form>
</div>
